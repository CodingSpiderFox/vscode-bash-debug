{
	"name": "bash-debug",
	"displayName": "Bash Debug",
	"version": "0.0.8",
	"publisher": "rogalmic",
	"description": "A debugger extension for bash scripts (using bashdb).",
	"author": {
		"name": "Michal Rogalinski",
		"email": "rogalinsky@gmail.com"
	},
	"engines": {
		"vscode": "^1.7.1",
		"node": "^6.5.0"
	},
	"icon": "images/bash-debug-icon.svg",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/rogalmic/vscode-bash-debug.git"
	},
	"bugs": {
		"url": "https://github.com/rogalmic/vscode-bash-debug/issues"
	},
	"dependencies": {
		"vscode-debugprotocol": "^1.19.0",
		"vscode-debugadapter": "^1.19.0",
		"child-process": "^1.0.2"
	},
	"devDependencies": {
		"@types/es6-collections": "^0.5.29",
		"@types/es6-promise": "^0.0.32",
		"@types/mocha": "^2.2.33",
		"@types/node": "^6.0.50",
		"typescript": "^2.2.1",
		"mocha": "^3.1.2",
		"vscode": "^1.0.3",
		"vscode-debugadapter-testsupport": "^1.19.0",
		"tslint": "^5.1.0",
		"vsce": "^1.16.1"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onCommand:extension.bash-debug.getProgramName",
		"onCommand:extension.bash-debug.selectProgramName",
		"onCommand:extension.bash-debug.provideInitialConfigurations"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "shellscript"
			}
		],
		"debuggers": [
			{
				"type": "bashdb",
				"label": "Bash Debug",

				"program": "./out/bashDebug.js",
				"runtime": "node",

				"variables": {
					"AskForScriptName": "extension.bash-debug.getProgramName",
					"SelectScriptName": "extension.bash-debug.selectProgramName"
				},

				"configurationSnippets": [
					{
						"label": "Bash Debug: Launch",
						"description": "A new configuration for launching a bash debug program",
						"body": {
							"type": "bashdb",
							"request": "launch",
							"name": "{2:Launch Program}",
							"program": "^\"\\${workspaceRoot}/${1:Program}\""
						}
					}
				],

				"configurationAttributes": {
					"launch": {
						"required": [ "scriptPath", "commandLineArguments" ],
						"properties": {
							"scriptPath": {
								"type": "string",
								"description": "Absolute path to a script.",
								"default": "${workspaceRoot}/${command:SelectScriptName}"
							},
							"commandLineArguments": {
								"type": "string",
								"description": "Command line arguments.",
								"default": ""
							},
							"bashDbPath": {
								"type": "string",
								"description": "bashdb location.",
								"default": "bashdb"
							},
							"bashPath": {
								"type": "string",
								"description": "bash location.",
								"default": "bash"
							},
							"showDebugOutput": {
								"type": "boolean",
								"description": "Defines if bashdb output will be visible together with script output.",
								"default": false
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": "extension.bash-debug.provideInitialConfigurations"
			}
		]
	}
}