{
	"name": "bash-debug",
	"displayName": "Bash Debug",
	"version": "0.0.8",
	"publisher": "rogalmic",
	"description": "A debugger extension for bash scripts (using bashdb).",
	"author": {
		"name": "Michal Rogalinski",
		"email": "rogalinsky@gmail.com"
	},
	"license": "MIT",
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.18.0",
		"node": "^7.9.0"
	},
	"icon": "images/bash-debug-icon.svg",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/rogalmic/vscode-bash-debug.git"
	},
	"bugs": {
		"url": "https://github.com/rogalmic/vscode-bash-debug/issues"
	},
	"dependencies": {
		"vscode-debugprotocol": "1.25.0",
		"vscode-debugadapter": "1.25.0",
		"child-process": "^1.0.2"
	},
	"devDependencies": {
		"@types/node": "7.0.43",
		"@types/mocha": "2.2.45",
		"typescript": "2.6.2",
		"mocha": "4.0.1",
		"vscode": "1.1.10",
		"vscode-debugadapter-testsupport": "1.25.0",
		"tslint": "5.8.0",
		"vsce": "1.35.0"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.bash-debug.getProgramName",
		"onCommand:extension.bash-debug.selectProgramName"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "shellscript"
			}
		],
		"debuggers": [
			{
				"type": "bashdb",
				"label": "Bash Debug",
				"program": "./out/bashDebug.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program",
							"args"
						],
						"properties": {
							"commandLineArguments": {
								"type": "string",
								"description": "Deprecated. Use `args` instead.",
								"default": "`commandLineArguments` is deprecated. Use `args` instead."
							},
							"scriptPath": {
								"type": "string",
								"description": "Deprecated. Use `program` instead.",
								"default": "`scriptPath` is deprecated. Use `program` instead."
							},
							"args": {
								"type": "string",
								"description": "Command line arguments.",
								"default": ""
							},
							"bashDbPath": {
								"type": "string",
								"description": "bashdb location.",
								"default": "bashdb"
							},
							"bashPath": {
								"type": "string",
								"description": "bash location.",
								"default": "bash"
							},
							"program": {
								"type": "string",
								"description": "Absolute path to a script.",
								"default": "${workspaceFolder}/${command:SelectScriptName}"
							},
							"showDebugOutput": {
								"type": "boolean",
								"description": "Defines if bashdb output will be visible together with script output.",
								"default": false
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "bashdb",
						"request": "launch",
						"name": "Bash-Debug (select script from list of sh files)",
						"cwd": "${workspaceFolder}",
						"program": "${command:SelectScriptName}",
						"args": "",
						"windows": {
							"bashPath": "C:\\Windows\\sysnative\\bash.exe"
						},
						"linux": {
							"bashPath": "bash"
						},
						"osx": {
							"bashPath": "bash"
						}
					},
					{
						"type": "bashdb",
						"request": "launch",
						"name": "Bash-Debug (hardcoded script name)",
						"cwd": "${workspaceFolder}",
						"program": "${workspaceFolder}/path/to/script.sh",
						"args": "",
						"windows": {
							"bashPath": "C:\\Windows\\sysnative\\bash.exe"
						},
						"linux": {
							"bashPath": "bash"
						},
						"osx": {
							"bashPath": "bash"
						}
					},
					{
						"type": "bashdb",
						"request": "launch",
						"name": "Bash-Debug (type in script name)",
						"cwd": "${workspaceFolder}",
						"program": "${workspaceFolder}/${command:AskForScriptName}",
						"args": "",
						"windows": {
							"bashPath": "C:\\Windows\\sysnative\\bash.exe"
						},
						"linux": {
							"bashPath": "bash"
						},
						"osx": {
							"bashPath": "bash"
						}
					}
				],
				"configurationSnippets": [
					{
						"label": "Bash Debug: Launch",
						"description": "A new configuration for 'debugging' a user selected shell script file.",
						"body": {
							"type": "bashdb",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForScriptName}\""
						}
					}
				],
				"variables": {
					"AskForScriptName": "extension.bash-debug.getProgramName",
					"SelectScriptName": "extension.bash-debug.selectProgramName"
				}
			}
		]
	}
}
